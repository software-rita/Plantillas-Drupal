{{ attach_library('RITA/about-styling') }}
<div class="modal fade" id="memberModal{{ node.id }}" tabindex="-1" role="dialog"
    aria-labelledby="memberModal{{ node.id }}Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-header text-center">
                {% if node. field_imagen_investigador.value %}
                <img src="{{file_url(node.field_imagen_investigador.entity.fileuri)}}" class="img-fluid" alt="">
                {% else %}
                <img src="{{ base_path ~ directory }}/images/investigadores.png" class="img-fluid" alt="">
                {% endif %}
                <div class="modal-title">
                    <h3 id="memberModal{{ node.id }}Label">{{label}}</h3>
                    {% if node.field_cargo.value %}
                    <h5 id="memberModal{{ node.id }}Label">{{node.field_cargo.value}}</h5>
                    {% endif %}
                </div>
            </div>
            <div class="modal-body">
                <p class="text-justify">{{node.field_descripcion_investigador.value}}</p>
            </div>
            <div class="modal-footer">
                {% if node.field_cvlac.0.url %}
                <a class="btn-team btn btn-more" target=”_blank” href="{{node.field_cvlac.0.url }}">cvLac</a>
                {% endif %}
                {% if node.field_linkedin.0.url %}
                <a class="btn-team linkedin btn btn-more" target=”_blank”
                    href="{{node.field_linkedin.0.url }}">LinkedIn</a>
                {% endif %}
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>