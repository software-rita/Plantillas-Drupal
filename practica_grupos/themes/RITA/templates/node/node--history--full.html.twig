{{ attach_library('RITA/about-styling') }}
<section id="history" class="tab-pane">
    <div class="section-title">
        <h2 data-aos="fade-down">Historia</h2>
        <p>{{node.field_descripcion_investigador.value}}</p>
    </div>
    <div class="timeline">
        <ul>
            {% for item in content.field_hito['#items'] %}
            <li>
                <div>
                    <time>{{item.summary}}</time>{{item.value}}
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
</section>