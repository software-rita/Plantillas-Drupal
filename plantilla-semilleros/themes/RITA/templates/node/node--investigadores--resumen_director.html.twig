{{ attach_library('RITA/about-styling') }}
<div class="cont-general-team dir-team">
    <div class="cont-main-ind-team">
        <div class="descrip-ind-team">
            <br>
            {{label}}
            <h5>Director</h5>
            <div class="descrip-ind-team-img">
                {% if node. field_imagen_investigador.value %}
                <img src="{{file_url(node.field_imagen_investigador.entity.fileuri)}}" class="img-fluid" alt="Director">
                {% else %}
                <img src="{{ base_path ~ directory }}/images/investigadores.png" class="img-fluid" alt="Director">
                {% endif %}
            </div>
        </div>
        <hr class="line-team-ind">
        <div class="profile-team">
            {{node.field_descripcion_investigador.value}}
        </div>
        {% if node.field_cvlac.0.url %}
        <a class="btn-team btn btn-more" target=”_blank” href="{{node.field_cvlac.0.url }}">cvLac</a>
        {% endif %}
        {% if node.field_linkedin.0.url %}
        <a class="btn-team linkedin btn btn-more" target=”_blank” href="{{node.field_linkedin.0.url }}">LinkedIn</a>
        {% endif %}
    </div>
</div>